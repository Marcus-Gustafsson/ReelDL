{
  "manifest_version": 3,
  "name": "ReelDL Helper",
  "version": "1.0.0",
  "description": "Adds a context menu helper that sends Facebook reel URLs to yt-dlp.",
  "permissions": [
    "contextMenus",
    "nativeMessaging",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "https://www.facebook.com/*"
  ],
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/*"
      ],
      "js": ["content/video_context_capture.js"],
      "run_at": "document_idle"
    }
  ]
}
